// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
int main() {
    int t;
    cin>>t;
    while(t--)
    {
        long long x,y;
        cin>>y>>x;
        if(y>x)
        {
            long long area=(y-1)*(y-1);
            if(y%2!=0)
            {
                cout<<area+x<<endl;
            }
            else{
                cout<<(2*y-x)+area<<endl;
            }
        }
        else
        {
            long long area=(x-1)*(x-1);
            if(x%2==0)
            {
                cout<<area+y<<endl;
            }
            else{
                cout<<(2*x-y)+area<<endl;
            }
        }
    }
}
